{
  "name": "prisma_hackathon",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev": "bunx concurrently \"bun:dev:api\" \"bun:dev:web\"",
    "dev:api": "bun --filter='./apps/api' run dev",
    "dev:web": "bun --filter='./apps/web' run dev --open",
    "build": "concurrently \"bun:build:api\" \"bun:build:web\"",
    "build:api": "bun --filter='./apps/api' run build",
    "build:web": "bun --filter='./apps/web' run build",
    "start": "concurrently \"bun:start:api\" \"bun:start:web\"",
    "start:api": "bun --filter='./apps/api' run start",
    "start:web": "bun --filter='./apps/web' run start",
    "prisma:generate": "bun --filter='./apps/api' run generate",
    "prisma:migrate": "bun --filter='./apps/api' bun run migrate",
    "lint": "concurrently \"bun:lint:api\" \"bun:lint:web\"",
    "lint:api": "bun --filter='./apps/api' run lint",
    "lint:web": "bun --filter='./apps/web' run lint"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "concurrently": "^9.2.1"
  }
}
